  width: 100%;
}
.button{
  position: fixed;
  bottom: 150rpx;
  right: 0;
  min-width: 40vw;
  max-width: 80vw;
  display: flex;
  flex-direction: row-reverse;
}
.button button{
  flex:1;
  max-width: 32vw;
  border-radius: 0;
}
.button .normal{
  flex:4;
}
.taskStatus{
  padding: 30rpx;
}
.taskStatus .title{
  color: #f37b1d;
  font-weight: bold;
}
.taskStatus .font{
  color: #f37b1d;
}
.bg-gradual-orange {
  background-image: linear-gradient(to right top,#Ff9700, #Ed1c24);
  color: #ffffff;
}
.bg-grey{
  background-color: #8799a320;
  color: #ffffff;
}
.bg-green{
  background-color: #39b54a80;
  color: #ffffff;
}
.taskCard{
  color:#eee;
}
.replay{
  position: fixed;
  right: 0;
  bottom: 250rpx;
  z-index: 99;
  border-radius: 0;
  font-size: 30rpx;
  background: #8799a320!important;
  color: #ffffff;
}
.card-swiper swiper-item{
  width: 100%!important;
  left: 0;
}
.solids-top::after{
    border-top: 8rpx solid #00000020;
}
.cu-item{
  background-color: #00000005!important;
}
.cuIcon-messagefill{
  font-size: 30rpx;
}
.cai_na{
  position: absolute;
  right: 20rpx;
