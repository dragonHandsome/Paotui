.taskCard{
  position: relative;
  padding: 20rpx;
  font-size: 24rpx;
  box-shadow: 1px 1px 4px #00000020;
}
.taskCard>scroll-view{
  height:88vh;
  position: relative;
  padding-bottom: 100px;
}

.taskCard .top{
  display: flex;
  position: relative;
  flex-direction: row;
  padding: 10rpx 20rpx;
  justify-content: space-between;
}
.taskCard .top .title{
  font-size: 36rpx;
  color: #f37b1d;
}
.taskCard .top .createTime{
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  font-size: 24rpx;
}
.taskCard .center{
  display: flex;
  position: relative;
  padding: 20rpx 20rpx;
}
.taskCard .center .options view{
  padding: 0 0 30rpx 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  max-width: 300rpx;
}
.taskCard .center .content{
  margin-left: 20rpx;
}

.reward{
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
  padding: 10rpx;
  background-color: #e0e0e050;
  color: red;
}
.reward text{
  font-weight: bold;
  color: red!important;
}
.foot-options{
  display: grid;
  grid-template-columns: auto auto;
  font-size: 24rpx;
  padding: 0 30rpx;
}
.foot-options .text{
  min-width: 40vw;
  max-width: 40vw;
}
.foot-options .images{
  min-width: 100%;
}
.foot-options > view{
  margin-bottom: 30rpx;
}
.foot-options .text{
  display: flex;

}
.foot-options .info{
  color: #f37b1d;
  font-weight: bold;
}

.foot-options .text .value{
  margin-left: 10rpx;
}
.images{
  padding: 30rpx;
}
.images .info{
  margin-bottom: 30rpx;
  font-weight: bold;
  color: #f37b1d;
}
.images .value .imgblock{
  position: relative;
  margin-bottom: 20rpx;
}
